<%- include('./partials/header.ejs') %>
<style>
    *{
        overflow-x: hidden;
    }
</style>
<div class="bg-[#F1F3F6] min-h-[100vh] w-[100vw] flex justify-center items-center py-[3%]">
    <div class="bg-purple-200 flex flex-col h-full w-[70%] ">
        <!-- filter section -->
        <div class="w-full h-[10vh] bg-[white] "></div>
        <% products.forEach(function(elem){ %>
            <a href="/store/product/<%=elem._id %>">
            <div class="w-full h-[25vh] bg-white flex border-b-2 border-[#F0F0F0] ">
                <div class="h-full w-[25%] bg-white flex justify-center items-center overflow-hidden ">
                    <img src="/images/uploads/<%=elem.image %>" class="h-[200px]" >
                </div>
               <div class="h-full w-[55%] bg-white px-[3%] py-4">
                <h1 class="text-[23px] font-semibold capitalize"><%= elem.name %></h1>
                <p class="text-[#a3a3a3] font-normal text-[20px]">1083 review and ratings</p>
                <p><%=elem.description %></p>
               </div>
               <div class="h-full w-[20%] bg-white flex justify-center items-start gap-4 capitalize py-4">
                <div class="flex justify-center items-center gap-6"> <h1 class="text-[25px]  font-semibold">Rs.<%=elem.price %></h1>
                <div class="w-[80px] flex justify-center items-center"><img src="/images/pre/fa.png"  ></div></div>
               
                
                
               </div>
            </div>
            </a>
        <%}) %>
</div>
<%- include('./partials/footer.ejs') %>